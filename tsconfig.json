{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": false,
    "resolveJsonModule": true,
  },
  "include": [
    "hss-server.ts",
    "/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
